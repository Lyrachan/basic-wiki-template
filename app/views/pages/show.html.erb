<p style="color: green"><%= notice %></p>

<%= render @page %>

<div>
  <ul>
    <% @page.articles.each do |article| %>
      <li>
        <%= link_to "#{article.title}", page_article_path(@page, article), class: "btn btn-primary text-white" %>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to "New article", new_page_article_path(@page) %>

  <%= link_to "Edit this page", edit_page_path(@page) %> |
  <%= link_to "Back to pages", pages_path %>

  <%= button_to "Destroy this page", @page, method: :delete %>
</div>
